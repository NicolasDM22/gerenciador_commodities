import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;
import java.io.IOException;
import java.net.URI;
import java.net.http.HttpClient;
import java.net.http.HttpRequest;
import java.net.http.HttpResponse;
import java.util.List;
import java.util.Map;

public class GoogleAIClient {
    private static final String MODEL_NAME = "gemini-2.5-flash"; 
    private static final String ENDPOINT_BASE = "https://generativelanguage.googleapis.com/v1/models/" + MODEL_NAME + ":generateContent?key=";
    
    private final String apiKey;
    private final HttpClient http = HttpClient.newHttpClient();
    private final ObjectMapper mapper = new ObjectMapper();

    public GoogleAIClient(String apiKey) {
        this.apiKey = apiKey;
    }

    public String ask(String userPrompt) throws IOException, InterruptedException {
        Map<String, Object> part = Map.of("text", userPrompt);
        Map<String, Object> content = Map.of("parts", List.of(part));
        
        Map<String, Object> body = Map.of(
            "contents", List.of(content)
        );

        HttpRequest req = HttpRequest.newBuilder()
            .uri(URI.create(ENDPOINT_BASE + apiKey))
            .header("Content-Type", "application/json")
            .POST(HttpRequest.BodyPublishers.ofString(mapper.writeValueAsString(body)))
            .build();

        HttpResponse<String> resp = http.send(req, HttpResponse.BodyHandlers.ofString());

        if (resp.statusCode() != 200) {
            throw new RuntimeException("Erro Google AI (HTTP " + resp.statusCode() + "): " + resp.body());
        }

        JsonNode json = mapper.readTree(resp.body());
        
        JsonNode textNode = json.path("candidates").path(0).path("content").path("parts").path(0).path("text");
        
        if (textNode.isTextual()) {
            return textNode.asText();
        } else {
            throw new RuntimeException("Resposta da API inv√°lida ou incompleta. JSON: " + resp.body());
        }
    }
}
